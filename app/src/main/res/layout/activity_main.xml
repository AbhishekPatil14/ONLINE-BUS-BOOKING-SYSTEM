<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCD1D9"
            android:orientation="vertical">



            <TextView
                android:id="@+id/Cushdt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="25dp"
                android:text="Online  Bus Reservation System"
                android:textColor="@color/black"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/Cusedt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30ffffff"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:hint="Username:"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="20dp"/>

            <EditText
                android:id="@+id/CusEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30ffffff"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="20dp"
                android:hint="Email:" />

            <EditText
                android:id="@+id/CusPass"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30ffffff"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="20dp" />

            <EditText
                android:id="@+id/Cusedt4"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30ffffff"
                android:textColorHint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="20dp" />

            <CheckBox
                android:id="@+id/Cuscbt1"
                android:text="I agree to the terms and conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30ffffff"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:paddingStart="20dp"
                android:drawablePadding="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Cusbtn1"
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:layout_margin="20dp" />

            <TextView
                android:id="@+id/CustextViewLoginOption"
                android:text="Already have an account? Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/socialicons"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/img_2"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/img_3"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/img_4"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>






</LinearLayout>
